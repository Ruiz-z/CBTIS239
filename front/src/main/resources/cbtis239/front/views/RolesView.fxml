<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cbtis239.front.ui.users.RolesController"
            prefWidth="800" prefHeight="550"
            style="-fx-background-color: #f8f9fa;">

    <!-- ðŸ”º Encabezado -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color:#800000;" spacing="10">
            <padding><Insets top="10" bottom="10" left="20" right="20"/></padding>
            <Label text="Crear Roles"
                   style="-fx-font-size:18px; -fx-text-fill:white; -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <!-- ðŸ§© Formulario y tabla -->
    <center>
        <VBox spacing="15" style="-fx-padding:20;">
            <!-- Campos -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" prefWidth="200"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" prefWidth="200"/>
                </columnConstraints>

                <children>
                    <Label text="ID Rol:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtId" promptText="Auto" editable="false"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Nombre Rol:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="3"
                               promptText="Ej. Servicios Escolares"/>

                    <Label text="DescripciÃ³n:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"
                              GridPane.columnSpan="3" prefRowCount="2"
                              promptText="Funciones o permisos del rol"/>
                </children>
            </GridPane>

            <!-- Tabla -->
            <TableView fx:id="tblRoles" prefHeight="280">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colNombre" text="Nombre Rol" prefWidth="220"/>
                    <TableColumn fx:id="colDescripcion" text="DescripciÃ³n" prefWidth="360"/>
                </columns>
            </TableView>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER">
                <children>
                    <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardar"
                            style="-fx-background-color:#28a745; -fx-text-fill:white; -fx-font-weight:bold;"/>
                    <Button fx:id="btnActualizar" text="Actualizar" onAction="#onGuardar"
                            style="-fx-background-color:#007bff; -fx-text-fill:white; -fx-font-weight:bold;"/>
                    <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar"
                            style="-fx-background-color:#ffc107; -fx-text-fill:black; -fx-font-weight:bold;"/>
                    <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"
                            style="-fx-background-color:#dc3545; -fx-text-fill:white; -fx-font-weight:bold;"/>
                    <Button fx:id="btnVolver" text="Volver al MenÃº" onAction="#onVolverMenu"
                            style="-fx-background-color:#800000; -fx-text-fill:white; -fx-font-weight:bold;"/>
                </children>
            </HBox>
        </VBox>
    </center>
</BorderPane>
