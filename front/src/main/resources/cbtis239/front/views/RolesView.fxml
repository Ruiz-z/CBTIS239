<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane fx:controller="cbtis239.front.ui.users.RolesController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="900" prefHeight="520"
            stylesheets="@/cbtis239/front/css/roles.css">

    <!-- HEADER -->
    <top>
        <StackPane styleClass="app-header" prefHeight="56">
            <Label text="Crear Roles" styleClass="header-title"/>
        </StackPane>
    </top>

    <!-- CONTENIDO -->
    <center>
        <VBox spacing="16" alignment="TOP_LEFT" styleClass="content"
              BorderPane.alignment="CENTER">
            <!-- Formulario superior -->
            <GridPane hgap="16" vgap="10" styleClass="form">
                <columnConstraints>
                    <ColumnConstraints minWidth="90" halignment="RIGHT"/>
                    <ColumnConstraints minWidth="140" hgrow="NEVER"/>
                    <ColumnConstraints minWidth="110" halignment="RIGHT"/>
                    <ColumnConstraints minWidth="240" hgrow="NEVER"/>
                    <ColumnConstraints minWidth="90" halignment="RIGHT"/>
                    <ColumnConstraints minWidth="360" hgrow="ALWAYS"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="36" vgrow="NEVER"/>
                </rowConstraints>

                <Label text="ID Rol:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtIdRol" promptText="Ej. 1"
                           prefWidth="120" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre Rol:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtNombreRol" promptText="Ej. Servicios Escolares"
                           prefWidth="220" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Permisos:" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <TextField fx:id="txtPermisos" promptText="Ej. crear, actualizar, eliminar"
                           prefWidth="420" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
            </GridPane>

            <!-- Tabla -->
            <VBox spacing="8">
                <TableView fx:id="tblRoles" prefHeight="320" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="180"/>
                        <TableColumn fx:id="colNombre" text="Nombre Rol" prefWidth="660"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="18" styleClass="buttons-row">
                <!-- Botón Volver al Menú -->
                <Button text="Volver al Menú"
                        onAction="#onVolverMenu"
                        styleClass="btn-danger"/>

                <Button text="Guardar"   onAction="#onGuardar"   styleClass="btn-primary"/>
                <Button text="Actualizar" onAction="#onActualizar" styleClass="btn-secondary"/>
                <Button text="Limpiar"   onAction="#onLimpiar"/>
                <Button text="Eliminar"  onAction="#onEliminar"   styleClass="btn-danger"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
