<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:controller="cbtis239.front.ui.users.MenuController"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/cbtis239/front/css/menu.css">

    <!-- BARRA SUPERIOR -->
    <top>
        <StackPane styleClass="topbar" prefHeight="50">
            <Label text="Menu Servicios Escolares"
                   styleClass="topbar-title"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </StackPane>
    </top>

    <!-- SIDEBAR -->
    <left>
        <StackPane>
            <VBox spacing="8" styleClass="sidebar" prefWidth="220"
                  AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                  AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

                <fx:define>
                    <ToggleGroup fx:id="menuGroup"/>
                </fx:define>

                <ToggleButton text="Inscripci칩n" toggleGroup="$menuGroup"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS">
                    <graphic><FontIcon iconLiteral="fas-clipboard" iconSize="20"/></graphic>
                </ToggleButton>

                <ToggleButton text="Horario" toggleGroup="$menuGroup"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS">
                    <graphic><FontIcon iconLiteral="fas-clock" iconSize="20"/></graphic>
                </ToggleButton>

                <ToggleButton text="Registrar Usuario" toggleGroup="$menuGroup"
                              onAction="#openRegistrarUsuario"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS">
                    <graphic><FontIcon iconLiteral="fas-user-plus" iconSize="20"/></graphic>
                </ToggleButton>

                <ToggleButton text="Roles" toggleGroup="$menuGroup"
                              onAction="#openRolesView"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS">
                    <graphic><FontIcon iconLiteral="fas-user-shield" iconSize="20"/></graphic>
                </ToggleButton>

                <ToggleButton text="Asistencia" toggleGroup="$menuGroup"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS">
                    <graphic><FontIcon iconLiteral="fas-user-check" iconSize="20"/></graphic>
                </ToggleButton>

                <ToggleButton text="Alumnos" toggleGroup="$menuGroup"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS"
                              onAction="#openAlumnoView">
                    <graphic><FontIcon iconLiteral="fas-users" iconSize="20"/></graphic>
                </ToggleButton>

                <ToggleButton text="M치s Opciones" toggleGroup="$menuGroup"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS"
                              onAction="#openMenu2">
                    <graphic><FontIcon iconLiteral="fas-angle-right" iconSize="20"/></graphic>
                </ToggleButton>

                <!-- 游댠 CERRAR SESI칍N IGUAL QUE LOS DEM츼S -->
                <ToggleButton text="Cerrar Sesi칩n" toggleGroup="$menuGroup"
                              styleClass="nav-btn" contentDisplay="LEFT" graphicTextGap="10" VBox.vgrow="ALWAYS"
                              onAction="#onCerrarSesion">
                    <graphic><FontIcon iconLiteral="fas-sign-out-alt" iconSize="20"/></graphic>
                </ToggleButton>

            </VBox>
        </StackPane>
    </left>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content">
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;" VBox.vgrow="ALWAYS">

                <!-- 游댠 Bienvenido m치s arriba -->
                <Label text="Bienvenido Servicios Escolares"
                       styleClass="welcome-title"
                       style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

                <FontIcon iconLiteral="fas-user-cog" iconSize="200" style="-fx-icon-color: black;"/>

            </VBox>
        </StackPane>
    </center>
</BorderPane>